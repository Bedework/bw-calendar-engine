      <id>jboss-deprecated</id>
      <name>JBoss Deprecated Repository</name>
      <url>http://repository.jboss.org/nexus/content/repositories/deprecated</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
